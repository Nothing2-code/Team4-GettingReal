<Window x:Class="Team4ProjectGettingReal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team4ProjectGettingReal"
        mc:Ignorable="d"
        Title="BubaiSuperMarked POS" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button BorderBrush="Transparent" Content="Home" Width="75" Height="30"/>
            <Button Content="About" Width="75" Height="30"/>
            <Button Content="Resource" Width="75" Height="30"/>
        </StackPanel>


        <Grid Grid.Row="1">
            <DataGrid ItemsSource="{Binding items}">

            </DataGrid>
        </Grid>

    </Grid>
</Window>
