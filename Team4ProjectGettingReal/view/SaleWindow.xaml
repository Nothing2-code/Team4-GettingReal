<Window x:Class="Team4ProjectGettingReal.SaleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Team4ProjectGettingReal"
        mc:Ignorable="d"
        Title="Tilføj vare" Height="254" Width="300">
    <StackPanel Margin="10">
        <TextBlock Text="Item:" />
        <TextBox Name="NameBox" />
        <TextBlock Text="Beskrivelse:" Margin="0,10,0,0" />
        <TextBox Name="DescriptionBox" />
        <TextBlock Text="Pris:" />
        <TextBox x:Name="PriceBox" />
        <TextBlock Text="Antal:" />
        <TextBox x:Name="AmountBox" />
        <Button Content="Submit" Click="Submit_Click" />
    </StackPanel>
</Window>
