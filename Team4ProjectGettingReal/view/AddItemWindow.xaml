<Window x:Class="Team4ProjectGettingReal.View.AddItemWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tilføj Vare" Height="300" Width="400">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Varenavn:"/>
            <TextBox x:Name="NameBox"/>

            <TextBlock Text="Beskrivelse:" Margin="0,10,0,0"/>
            <TextBox x:Name="DescriptionBox"/>

            <TextBlock Text="Pris:" Margin="0,10,0,0"/>
            <TextBox x:Name="PriceBox"/>

            <TextBlock Text="Antal:" Margin="0,10,0,0"/>
            <TextBox x:Name="AmountBox"/>

            <Button Content="Tilføj" Click="Submit_Click" Margin="0,20,0,0" Width="100" HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
