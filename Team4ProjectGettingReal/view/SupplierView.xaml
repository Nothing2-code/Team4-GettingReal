<UserControl x:Class="Team4ProjectGettingReal.View.SupplierView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Team4ProjectGettingReal.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Leverandør Oversigt" 
                   FontSize="22" 
                   FontWeight="SemiBold" 
                   HorizontalAlignment="Center" 
                   Margin="0,15,0,15" 
                   Grid.Row="0"/>

        <DataGrid Margin="0,0,0,30" Grid.Row="1"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
            <Button Content="Tilføj Leverandør"  
                    Width="120" 
                    Height="35" 
                    Margin="10,0,10,0"
                    Background="#E5E7EB"
                    Foreground="#333333"
                    BorderThickness="0">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>